<context:component-scan base-package="com.security" >
<context:include-filter  type="regex"   expression="com.security.com.security.UserLoginService" />
<context:exclude-filter type="regex" expression="com.security.*Controller"/>
</context:component-scan>
	 
	<beans:bean id="userService" class="com.security.UserLoginService">
<!-- 	<beans:property name="authdao" ref="authdao"></beans:property> -->
	</beans:bean>	        
	
	<beans:bean class="org.springframework.security.authentication.encoding.ShaPasswordEncoder" id="passwordEncoder"/>
	
	<!-- TYPE-II userDetailService  -->     
	
	 <authentication-manager>
	         <authentication-provider user-service-ref="userService">	 
	         <password-encoder hash="md5" />           
	         </authentication-provider>       
